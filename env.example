# MoneyFlow MVP - 環境変数設定ファイル（分離型・無料）
# このファイルを .env.local にコピーして値を設定してください

# =================
# 🔧 基本設定（必須）
# =================

# アプリケーション基本設定
NEXT_PUBLIC_APP_NAME="MoneyFlow"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =================
# 🗄️ Supabase設定（必須）
# =================

# Supabase プロジェクトURL（https://your-project.supabase.co）
NEXT_PUBLIC_SUPABASE_URL=

# Supabase 匿名キー（公開しても安全なキー）
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase サービスロールキー（サーバーサイド専用 - 絶対に公開しない）
SUPABASE_SERVICE_ROLE_KEY=

# =================
# 📱 LINE Login設定（MVP・必須）
# =================

# LINE Login チャンネル（認証専用）
NEXT_PUBLIC_LIFF_ID=
LINE_LOGIN_CHANNEL_ID=
LINE_LOGIN_CHANNEL_SECRET=

# =================
# 🤖 LINE Bot設定（将来・オプション）
# =================

# Messaging API チャンネル（Bot専用・将来追加）
LINE_BOT_CHANNEL_ID=
LINE_BOT_CHANNEL_SECRET=
LINE_BOT_ACCESS_TOKEN=
LINE_BOT_WEBHOOK_URL=https://your-domain.com/api/line/webhook

# =================
# 🧪 開発環境設定（開発用）
# =================

# 開発環境でのLIFFモック機能（true/false）
NEXT_PUBLIC_LIFF_MOCK_ENABLED=true

# テスト用LINEユーザーID（モック時のダミーデータ）
NEXT_PUBLIC_TEST_LINE_USER_ID=test-user-123

# LINEモック認証用の表示名
NEXT_PUBLIC_TEST_LINE_DISPLAY_NAME=テストユーザー

# 開発環境識別フラグ
NODE_ENV=development

# =================
# 🎨 UI/UX設定（現在使用中）
# =================

# デフォルトテーマ（light/dark/system）
NEXT_PUBLIC_DEFAULT_THEME=system

# デフォルト通貨コード
NEXT_PUBLIC_DEFAULT_CURRENCY=JPY

# デフォルトロケール
NEXT_PUBLIC_DEFAULT_LOCALE=ja-JP

# =================
# 🔒 セキュリティ設定（本番環境用）
# =================

# JWT署名用秘密鍵（ランダムな文字列）
NEXTAUTH_SECRET=

# 本番環境URL（認証リダイレクト用）
NEXTAUTH_URL=https://your-domain.com

# =================
# 🆓 無料サービス設定（将来・オプション）
# =================

# 無料OCR機能（Tesseract.js）
NEXT_PUBLIC_TESSERACT_ENABLED=true

# 画像処理設定
NEXT_PUBLIC_MAX_FILE_SIZE=5

# ☁️ Supabase Storage バケット名（将来のレシート画像用）
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=receipts

# =================
# 🌐 PWA設定（将来実装用）
# =================

# プッシュ通知用のVAPID公開キー
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# プッシュ通知用のVAPID秘密キー（サーバーサイド専用）
VAPID_PRIVATE_KEY= 